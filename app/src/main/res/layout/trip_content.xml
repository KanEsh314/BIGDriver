<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding=    "@dimen/medium"
    android:layout_marginBottom="@dimen/large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tripTagLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tripTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_light"
                android:layout_alignParentStart="true"
                android:padding="@dimen/small"
                android:textSize="@dimen/smallUniversalText"
                android:textColor="@color/colorDark"/>

            <TextView
                android:id="@+id/tripDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_light"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/small"
                android:textSize="@dimen/smallUniversalText"
                android:textColor="@color/colorDark"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/tripLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/tripTagLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="@dimen/small"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_action_pick_up"/>

                <TextView
                    android:id="@+id/driver_pick_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_light"
                    android:layout_margin="@dimen/small"
                    android:textSize="@dimen/smallUniversalText"
                    android:textColor="@color/colorDark"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="@dimen/small"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_action_drop_off"/>

                <TextView
                    android:id="@+id/driver_drop_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_light"
                    android:layout_margin="@dimen/small"
                    android:textSize="@dimen/smallUniversalText"
                    android:textColor="@color/colorDark"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/medium"
            android:layout_below="@id/tripLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_light"
                android:paddingTop="@dimen/small"
                android:paddingBottom="@dimen/small"
                android:text="Fare : "
                android:textSize="@dimen/smallUniversalText"
                android:textColor="@color/colorDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_light"
                android:paddingBottom="@dimen/small"
                android:paddingTop="@dimen/small"
                android:text="RM "
                android:textColor="@color/colorDark"
                android:textSize="@dimen/smallUniversalText" />

            <TextView
                android:id="@+id/trip_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_light"
                android:paddingTop="@dimen/small"
                android:paddingBottom="@dimen/small"
                android:textSize="@dimen/smallUniversalText"
                android:textColor="@color/colorDark"/>

            <TextView
                android:id="@+id/payment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_light"
                android:paddingTop="@dimen/small"
                android:paddingBottom="@dimen/small"
                android:textAlignment="textEnd"
                android:textSize="@dimen/smallUniversalText"
                android:textColor="@color/colorDark"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>